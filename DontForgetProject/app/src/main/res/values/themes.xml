<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DontForgetProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorError">@color/accentRed</item>
        <item name="statusBarBackground">@color/colorPrimary</item>

        <!-- 툴바 테마 스타일 설정 -->
        <item name="toolbarStyle">@style/Theme.DontForgetProject.Toolbar</item>

    </style>

    <style name="Theme.DontForgetProject.Toolbar" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/scdream_regular</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:gravity">center</item>
        <item name="titleCentered">true</item>
    </style>
    <style name="Theme.DontForgetProject.Button" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/scdream_regular</item>
    </style>

    <style name="Theme.DontForgetProject.CardView">
        <item name = "cardCornerRadius"> 10dp </item>
        <item name= "contentPadding">@dimen/padding_size_normal</item>
        <item name= "cardBackgroundColor">#00FFFFFF</item>
    </style>
    <style name="Theme.DontForgetProject.CardView_noPadding">
        <item name = "cardCornerRadius"> 10dp </item>
        <item name= "cardBackgroundColor">#00FFFFFF</item>
    </style>
    <style name="Theme.DontForgetProject.CardView_Padding8">
        <item name = "cardCornerRadius"> 10dp </item>
        <item name= "contentPadding">@dimen/margin_vertical_small2</item>
        <item name= "cardBackgroundColor">#00FFFFFF</item>
    </style>
    <style name="Theme.DontForgetProject.Text">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Theme.DontForgetProject" parent="Base.Theme.DontForgetProject" />

    <!--바텀 네비게이션 item text-->
    <style name="bottom_text">
        <item name="android:fontFamily">@font/scdream_light</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--탭 텍스트-->
    <style name="tab_text" parent="Widget.Design.TabLayout">
        <item name="android:fontFamily">@font/scdream_light</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--서치뷰 텍스트-->
    <style name="searchView_text" parent="TextAppearance.Material3.SearchView">
        <item name="android:fontFamily">@font/scdream_light</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>


    <!--다이얼로그 텍스트-->
    <style name="dialog_text" parent="Theme.AppCompat.Dialog">
        <item name="android:fontFamily">@font/scdream_regular</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--캘린더-->
    <style name="Theme.DontForgetProject.Calendar" parent="Widget.Material3.MaterialCalendar">
        <item name="background">@color/accentGray</item>
    </style>
</resources>