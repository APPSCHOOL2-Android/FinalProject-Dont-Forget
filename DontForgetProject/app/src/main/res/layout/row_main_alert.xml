<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_vertical_small1"
    android:paddingBottom="@dimen/margin_vertical_small1"
    android:transitionGroup="true">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView_rowMainAlert"
        style="@style/Theme.DontForgetProject.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/img_logo" />

            <TextView
                android:id="@+id/textView_rowMainAlert_alert"
                style="@style/Theme.DontForgetProject.Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_vertical_small2"
                android:fontFamily="@font/scdream_regular"
                android:text="알림 내용"
                android:textSize="@dimen/font_size_medium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>