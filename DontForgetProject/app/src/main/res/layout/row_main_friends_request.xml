<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="0dp">

    <com.google.android.material.card.MaterialCardView
        style="@style/Theme.DontForgetProject.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vertical_small1"
        android:layout_marginBottom="@dimen/margin_vertical_small1"
        app:cardCornerRadius="10dp"
        app:contentPadding="@dimen/padding_size_normal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_rowMainFriendsRequest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/scdream_regular"
                android:text="사람이름"
                style="@style/Theme.DontForgetProject.Text"
                android:textSize="@dimen/font_size_medium" />

            <TextView
                android:id="@+id/button_rowMainFriendsRequest_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/scdream_bold"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:text="수락"
                android:textColor="@color/category3"
                android:textSize="@dimen/font_size_medium" />

            <TextView
                android:id="@+id/button_rowMainFriendsRequest_deny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/scdream_bold"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:text="거절"
                android:textColor="@color/accentRed"
                android:textSize="@dimen/font_size_medium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>