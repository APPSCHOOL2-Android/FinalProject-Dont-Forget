<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_vertical_small2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_stroke_rectangler"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/textView_rowMainFriendsRequest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/scdream_light"
            android:text="사람이름"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_medium" />

        <TextView
            android:id="@+id/button_rowMainFriendsRequest_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/scdream_bold"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:text="수락"
            android:textColor="@color/category3"
            android:textSize="@dimen/font_size_medium" />

        <TextView
            android:id="@+id/button_rowMainFriendsRequest_deny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/scdream_bold"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:text="거절"
            android:textColor="@color/accentRed"
            android:textSize="@dimen/font_size_medium" />
    </LinearLayout>
</LinearLayout>