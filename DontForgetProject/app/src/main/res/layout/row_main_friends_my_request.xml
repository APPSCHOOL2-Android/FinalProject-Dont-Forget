<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        style="@style/Theme.DontForgetProject.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vertical_small1"
        android:layout_marginBottom="@dimen/margin_vertical_small1"
        app:cardCornerRadius="10dp"
        app:contentPadding="@dimen/padding_size_normal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView_rowMainFriendsMyRequest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/scdream_regular"
                style="@style/Theme.DontForgetProject.Text"
                android:text="사람이름"
                android:textSize="@dimen/font_size_medium" />

            <TextView
                android:id="@+id/textView_rowMainFriendsMyRequest_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/scdream_bold"
                style="@style/Theme.DontForgetProject.Text"
                android:textColor="@color/colorPrimary"
                android:text="000000@gmail.com"
                android:textSize="@dimen/font_size_medium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>